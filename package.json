{
  "name": "eventos",
  "version": "1.0.0",
  "description": "Site para divulgação de eventos de desenvolvimento de software, tecnologia e design.",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "./node_modules/gulp/bin/gulp.js test",
    "lint": "./node_modules/gulp/bin/gulp.js lint",
    "ci": "./node_modules/gulp/bin/gulp.js ci; npm run coverage; npm run check-coverage",
    "qa": "./node_modules/gulp/bin/gulp.js qa",
    "build-prod": "./node_modules/gulp/bin/gulp.js build-prod",
    "build-dev": "./node_modules/gulp/bin/gulp.js build-dev",
    "dev": "./node_modules/gulp/bin/gulp.js dev",
    "start": "npm run dev",

    "coverage": "./node_modules/babel-cli/bin/babel-node.js ./node_modules/istanbul/lib/cli cover node_modules/mocha/bin/_mocha test/index.js",
    "check-coverage": "./node_modules/istanbul/lib/cli.js check-coverage --statements 5 --branches 5 --functions 5 --lines 5",
    "report-coverage": "cat ./coverage/lcov.info | ./node_modules/codecov.io/bin/codecov.io.js",
    "report-coverage-codeclimate": "CODECLIMATE_REPO_TOKEN=32bbec6cb2d66cdbeffdad10c0fc10ad47afdadab393e0d6d2cade42a4cb90a0 ./node_modules/codeclimate-test-reporter/bin/codeclimate.js < ./coverage/lcov.info"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CWISoftware/eventos.git"
  },
  "author": "Rafael Eyng <rafaeleyng@gmail.com> (https://github.com/rafaeleyng)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CWISoftware/eventos/issues"
  },
  "homepage": "https://github.com/CWISoftware/eventos#readme",
  "config": {
    "ghooks": {
      "pre-commit": "if ./node_modules/gulp/bin/gulp.js pre-commit --env pre-commit; then git add dist; else printf '\npre-commit error: fix the test and/or lint errors and commit again\n\n'; (exit 1); fi"
    }
  },
  "dependencies": {
    "axios": "0.8.1",
    "does-match": "1.0.0",
    "react": "0.14.5",
    "react-dom": "0.14.5",
    "react-loader": "2.0.0"
  },
  "devDependencies": {
    "babel": "6.3.26",
    "babel-cli": "6.4.0",
    "babel-core": "6.3.26",
    "babel-eslint": "4.1.6",
    "babel-loader": "6.2.1",
    "babel-preset-es2015": "6.3.13",
    "babel-preset-react": "6.3.13",
    "babel-register": "6.3.13",
    "chai": "3.4.1",
    "clone": "1.0.2",
    "codeclimate-test-reporter": "0.1.1",
    "codecov.io": "0.1.6",
    "del": "2.2.0",
    "enzyme": "1.2.0",
    "eslint": "1.10.3",
    "eslint-config-defaults": "7.1.1",
    "eslint-plugin-filenames": "0.2.0",
    "eslint-plugin-react": "3.14.0",
    "ghooks": "1.0.3",
    "gulp": "3.9.0",
    "gulp-eslint": "1.1.1",
    "gulp-mocha": "2.2.0",
    "gulp-util": "3.0.7",
    "istanbul": "^1.0.0-alpha",
    "mocha": "2.3.4",
    "react-addons-test-utils": "0.14.5",
    "require-dir": "0.3.0",
    "webpack": "1.12.9",
    "webpack-dev-server": "1.14.0"
  }
}
